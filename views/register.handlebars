<p class="message">{{title}}</p>

<form id="signup" name="signup" method="post" action="/register">
	
	<label for="email">Email Address</label>
	<input id="addEmail" class="text" name="email" type="email" />
	<br>
	<label for="firstname">Firstname</label>
	<input id="addFirst" name="firstname" type="text" />
	<br>
	<label for="lastname">Lastname</label>
	<input id="addLast" name="lastname" type="text" />
	<br>
	<label for="lastname">Username</label>
	<input id="addUserName" name="username" type="text" />
	<br>
	<label for="password">Password</label>
	<input id="addPassword" name="password" type="password" />
	<br>
	<input id="signUp" class="btn" type="submit" value="Sign Up" />
	
</form>
