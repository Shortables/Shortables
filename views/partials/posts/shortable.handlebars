<div id="short-"{{post.id}}>
	<h3>{{post.title}}</h3>
	<div class="short-text">
		<p>{{post.content}}</p>
	</div>
	<span>Rating: {{post.rating}}</span><br/>
	<span>Author: {{User.username}}</span><br/>
	<span>Created: {{post.createdAt}}</span><br/>
 	{{#if user}}
		<button class="fav_toggle" data-id="{{post.id}}" data-fav="{{post.fav}}">
	 	{{#if post.fav}}Delete from favorites{{else}}Add to favorites!{{/if}}
		</button>
		{{#unless post.rated}}
			<button class="vote_up" data-id="{{post.id}}">Up</button>
			<button class="vote_down" data-id="{{post.id}}">Down</button>
		{{/unless}}
	{{/if}}
	{{#if user.owner}}
		{{#if post.published}}
			<p class="published_post">Published &nbsp;</p>
			<button class="publish_toggle" data-id="{{post.id}}" data-pub="{{post.published}}">
				Unpublish
			</button>
		{{else}}
			<p class="published_post">Unpublished &nbsp;</p>
			<button class="publish_toggle" data-id="{{post.id}}" data-pub="{{post.published}}">
				Publish
			</button>
		{{/if}}
	{{/if}}
</div>
<hr/>